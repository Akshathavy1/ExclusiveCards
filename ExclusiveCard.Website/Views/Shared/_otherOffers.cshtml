@model List<ExclusiveCard.Services.Models.DTOs.Public.OfferSummary>

<!-- c_widget - offer - START -->
<div class="c_widget">
    <div class="__header">Other Offers</div>
    <div class="__content">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var offer in Model)
            {
                <!-- c_mini-offer -->
                <a href="@Url.Action("Index", "Offers", new { country = ViewData["Country"], merchantId = offer.MerchantId, offerId = offer.OfferId })" class="c_mini-offer">
                    <div class="__logo">
                        @if (!string.IsNullOrEmpty(offer.MerchantLogoPath))
                        {
                            <img src="/images/blank.png" data-src="/Image/GetImage/?path=@offer.MerchantLogoPath" data-srcset="/Image/GetImage/?path=@offer.MerchantLogoPath" alt="@offer.MerchantName" class="lazy"/>
                        }
                        else
                        {
                            <img />
                        }
                    </div>
                    <div class="__content">
                        <h6>@offer.OfferShortDescription</h6>
                    </div>
                </a>
                <!-- c_mini-offer - END -->
            }
        }
    </div>
</div>
<!-- c_widget - offer - END -->