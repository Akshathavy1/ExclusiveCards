@model ExclusiveCard.WebAdmin.ViewModels.CustomerSearchViewModel
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Search";
}


<div id="mainDiv" class="col-md-12 Searchforcustomer div1List">

    <div class="form-group row">
        <h1 id="title-name" class="text-center title-name">Customers</h1>
    </div>

    <div class="form-horizontal col-md-12">
        <div class="form-group row">
            @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Username, new { htmlattributes = new { @class = "form-control  roundedInput" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(m => m.Dob, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })

            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Dob, "{0:yyyy-MM-dd}", new { @class = "form-control roundedInput", Type = "date" })
                @Html.ValidationMessageFor(model => model.Dob, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Forename, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Forename, new { htmlattributes = new { @class = "form-control  roundedInput" } })
                @Html.ValidationMessageFor(model => model.Forename, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(m => m.Surname, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Surname, new { htmlattributes = new { @class = "form-control  roundedInput" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group row">
            @Html.LabelFor(m => m.CardNumber, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.CardNumber, new { htmlattributes = new { @class = "form-control  roundedInput" } })
                @Html.ValidationMessageFor(model => model.Forename, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(m => m.CardDateIssued, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.CardDateIssued, "{0:yyyy-MM-dd}", new { @class = "form-control roundedInput", Type = "date" })
                @Html.ValidationMessageFor(model => model.CardDateIssued, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.CardStatus, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.CardStatus, Model.CustomStatusList, "Select Status", htmlAttributes: new { @class = "form-control roundedInput dropdownInput" })
                @Html.ValidationMessageFor(model => model.CardStatus, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(m => m.Postcode, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Postcode, new { htmlattributes = new { @class = "form-control  roundedInput" } })
                @Html.ValidationMessageFor(model => model.Postcode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.RegistrationCode, htmlAttributes: new { @class = "control-label col-md-2 cardsearch" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.RegistrationCode, new { htmlattributes = new { @class = "form-control  roundedInput" } })
                @Html.ValidationMessageFor(model => model.RegistrationCode, "", new { @class = "text-danger" })
            </div>
           
        </div>

        <div class="form-group">
            <button type="button" id="btnSearchCustomer" class="btn pull-right has-spinner">
                Search<span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>
            </button>
        </div>
    </div>
</div>

<div class="col-md-12 divtwoList" id="customsearch">
    @{
        @await Html.PartialAsync("_customerListPartial", @Model)
    }
</div>



@section Scripts
    {
    <script type="text/javascript" src="js/Exclusive/customer.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Customer.setUpEvents();
        });
    </script>
}
