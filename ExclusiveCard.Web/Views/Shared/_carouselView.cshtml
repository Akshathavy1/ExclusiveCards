@model List<ExclusiveCard.WebAdmin.ViewModels.MerchantImageViewModel>

<div id="carouselExampleIndicators" data-interval="false" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="i" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="i"></li>
            }
        }

    </ol>
    <div class="carousel-inner">
        @if (Model.Count > 0)
        {
            for (var i = 0; i < Model.Count; i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block carouselImage" merchantimageid="@Model[i].Id" merchantid="@Model[i].MerchantId" displayorder="@Model[i].DisplayOrder" src='~/Image/GetImage?path=@Model[i].ImagePath&id=@Model[i].Id' />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block carouselImage" merchantimageid="@Model[i].Id" merchantid="@Model[i].MerchantId" displayorder="@Model[i].DisplayOrder" src="~/Image/GetImage?path=@Model[i].ImagePath&id=@Model[i].Id" />
                    </div>
                }
            }
        }
        @if (@Model.Count > 1)
        {
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        }
        @*else
        {
            <div class="carousel-item active">
                <img class="d-block w-100" alt="No Image">
            </div>
        }*@
    </div>

</div>
<br />
<div class="form-group col-md-12 row">
    <div class="form-group col-md-6">
        @if (Model.Count > 0)
        {
            <button type="button" id="btnDeleteImage" class="btn has-spinner">
                <span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>Delete
            </button>
        }
        else
        {
            <button type="button" id="btnDeleteImage" class="btn has-spinner" disabled>
                <span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>Delete
            </button>
        }
    </div>
    <div class="form-group col-md-6">
        <button type="button" id="btnAddImage" class="btn has-spinner" onclick="addImage(this)">
            <span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>Add
        </button>
    </div>
</div>
