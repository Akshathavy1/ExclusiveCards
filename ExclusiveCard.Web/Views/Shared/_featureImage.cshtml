@model ExclusiveCard.WebAdmin.ViewModels.MerchantImageViewModel

<div class="col-md-12">
    @if (Model != null && !string.IsNullOrEmpty(Model.ImagePath))
    {
        <img class="d-block carouselImage" merchantimageid="@Model.Id" merchantid="@Model.MerchantId" src="~/Image/GetImage?path=@Model.ImagePath&id=@Model.Id" />
    }
    else if (Model != null)
    {
        <img class="d-block carouselImage" merchantimageid="@Model.Id" merchantid="@Model.MerchantId" />
    }
</div>
<div class="form-group col-md-12">
    <div class="form-group col-md-6">
        @if (Model != null && !string.IsNullOrEmpty(Model?.ImagePath))
        {
            <button type="button" id="btnDeleteFeature" merchantimageid="@Model.Id" merchantid="@Model.MerchantId" class="btn has-spinner">
                <span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>Delete
            </button>
        }
        else
        {
            <button type="button" id="btnDeleteFeature" class="btn has-spinner" disabled>
                <span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>Delete
            </button>
        }
    </div>
    <div class="form-group col-md-6">
        @if (Model != null && (!string.IsNullOrEmpty(Model?.ImagePath) || Model?.MerchantId == 0))
        {
            <button type="button" id="btnAddFeature" class="btn has-spinner" disabled onclick="addFeatureImage(this)">
                <span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>Add
            </button>
        }
        else
        {
            <button type="button" id="btnAddFeature" class="btn has-spinner" onclick="addFeatureImage(this)">
                <span class="spinner"><i class="fa fa-spinner fa-spin"></i></span>Add
            </button>
        }
    </div>
</div>
